<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Se crea el botón para tomar una nueva Foto  -->
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button2"
        android:layout_centerInParent="true"
        android:backgroundTint="#33CCFF "
        android:text="Tomar Foto"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_menu_camera" />

    <!-- Se crea el botón para abrir la galeria  -->
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:backgroundTint="#00CC33"
        android:text="Abrir Galería"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_menu_gallery" />

    <!-- Se crea el contenedor que mostrara la figura de la persona que se desea clasificar  -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="370sp"
        android:layout_height="350sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150sp" />

    <!-- Se muestra un mensaje de saludo -->
    <TextView
        android:id="@+id/classified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:text="Hola:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Este label contendra el nombre de la persona que clasificada -->
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classified"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#C30000"
        android:textSize="27sp"
        android:textStyle="bold" />

    <!-- Este contenedor de imagenes contiene el logo de la universida -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="500sp"
        android:layout_height="100sp"
        app:srcCompat="@drawable/logo_espe_100_anos_variaciones_06__1_"
        tools:srcCompat="@drawable/logo_espe_100_anos_variaciones_06__1_" />

</RelativeLayout>
